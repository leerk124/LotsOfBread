@model ProductsListViewModel

<div class="container-fluid category-heading">
    <h1>
        <strong>@Model.CurrentCategory</strong>
    </h1>
</div>

    <div class="row">
    @foreach (var p in Model.Products) //for each product list in the ProductListViewModel
    {

        @Html.Partial("ProductSummary", p)
    }
    </div>

<!--Pages on bottom of screen-->

    <div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-default"
         page-class-selected="btn-primary" page-url-category="@Model.CurrentCategory" class="btn-group float-right" style="margin-bottom:20px;">
    </div>

    


